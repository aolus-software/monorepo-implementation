{
	"extends": "@repo/config/tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"noEmit": false
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
