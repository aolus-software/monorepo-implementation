{
	"extends": "@repo/config/tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"noEmit": false,
		"paths": {
			"@repo/types": ["../types/src/index.ts"],
			"@repo/elysia": ["../elysia/src/index.ts"],
			"@repo/utils": ["../utils/src/index.ts"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"references": [
		{
			"path": "../types"
		},
		{
			"path": "../elysia"
		},
		{
			"path": "../utils"
		}
	]
}
