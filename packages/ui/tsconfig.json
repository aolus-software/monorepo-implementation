{
	"extends": "@repo/config/tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"noEmit": false
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
