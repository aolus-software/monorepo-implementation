{
	"extends": "@repo/config/tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": false,
		"paths": {
			"@repo/database": ["../database/src/index.ts"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"references": [{ "path": "../database" }]
}
