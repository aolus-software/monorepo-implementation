{
	"name": "monorepo-implementation",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.1.38",
	"scripts": {
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter='@repo/web-*'",
		"dev:api": "turbo run dev --filter='@repo/api-*'",
		"build": "turbo run build",
		"build:packages": "turbo run build --filter='@repo/*' --filter='!@repo/api-*' --filter='!@repo/web-*'",
		"build:web": "turbo run build --filter='@repo/web-*'",
		"build:api": "turbo run build --filter='@repo/api-*'",
		"start": "turbo run start",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mjs}\"",
		"typecheck": "turbo run typecheck",
		"clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo apps/*/dist apps/*/*.tsbuildinfo",
		"clean:build": "bun run clean && bun run build",
		"clean:typecheck": "bun run clean && bun run build && bun run typecheck",
		"db:generate": "bunx --bun drizzle-kit generate",
		"db:migrate": "bunx --bun drizzle-kit migrate",
		"db:studio": "bunx --bun drizzle-kit studio",
		"db:push": "bunx --bun drizzle-kit push",
		"db:pull": "bunx --bun drizzle-kit pull",
		"db:seed": "turbo run seed --filter='@repo/database'",
		"prepare": "husky"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"devDependencies": {
		"@repo/config": "workspace:*",
		"@types/bun": "latest",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"husky": "^9.1.7",
		"prettier": "^3.8.0",
		"turbo": "^2.7.5"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
